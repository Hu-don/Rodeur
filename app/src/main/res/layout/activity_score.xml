<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dimsun.game.rodeur.ScoreActivity">


    <TextView
        android:text="@string/gagnecombat"
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageMonstre"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_margin="30dp"
        />

    <TextView
        android:id="@+id/disVie"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/disOr"
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/goFromScoreToMarche"
            android:text="@string/continuer"
            android:layout_gravity="bottom"
            android:padding="26dp"
            android:background="@drawable/button_style_menu_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


</LinearLayout>
