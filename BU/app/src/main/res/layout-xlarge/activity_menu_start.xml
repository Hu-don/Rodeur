<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/coolgray"
    tools:context="com.dimsun.game.rodeur.MenuActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:src="@drawable/app_logo"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/last_played_char"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_weight="3"
        android:src="@drawable/guerrier_selec" />

    <Button
        android:id="@+id/continuer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_style_menu"
        android:text="@string/continuer"
        android:textAllCaps="true"
        android:textColor="@color/coolgray"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nouveau"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_style_menu"
        android:text="@string/nouveau_personnage"
        android:textAllCaps="true"
        android:textColor="@color/coolgray"
        android:textStyle="bold" />

    <Button
        android:id="@+id/options"
        android:background="@drawable/button_style_menu"
        android:text="@string/options"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/coolgray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/apropos"
        android:background="@drawable/button_style_menu"
        android:text="@string/a_propos"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/coolgray"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
